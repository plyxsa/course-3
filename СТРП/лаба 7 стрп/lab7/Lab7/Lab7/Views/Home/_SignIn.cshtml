@model SignInViewModel

@if (!User.IsInRole("Owner"))
{

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <button asp-controller="Home" asp-action="SignIn" type="submit" class="btn btn-primary">Войти</button>
            <button id="resetbtn" class="btn">Отмена</button>
        </div>
    </form>
}
else
{
    <form method="post">
        <div class="form-group mt-3">
            <button asp-controller="Home" asp-action="SignOut" type="submit" class="btn btn-primary">Выйти</button>
        </div>
    </form>
}

